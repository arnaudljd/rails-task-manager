
<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <div>
      <li><%= link_to task.title, task_path(task)%></li>
      <p><%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Delete task?"} %></p>
    </div>
  <% end %>
</ul>
<%= link_to "+ Add a new task", new_task_path%>
